<div class="row">
  <div class="col s12 m12">
    <div class="card-panel white">
      <div class="row">
        <%= form_for(@course, html: {class: "col s12", autocomplete: "off"}) do |f|%>
          <div class="row">
            <div class="input-field col s12">
              <%= f.text_field :name, class: "validate"%>
              <%= f.label :name %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.text_area :description, class: "materialize-textarea", id: "textarea1" %>
              <%= f.label :description %>
            </div>
          </div>
          <div class="row">
            <div class="col s12">
              <div class="center">
                <%= f.submit "Create", class: "btn yellow darken-1 waves-effect waves-light", name: "action" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
