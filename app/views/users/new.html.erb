<div class="row">
  <div class="col s12">
    <h1 align="center">Admin Login</h1>
  </div>
</div>

<div class="row">
    <div class="col s12 m12">
      <div class="card-panel white">
        <div class="row">
          <%= form_for(:session, html: {class: "col s12", autocomplete: "off"}, url: login_path) do |f|%>
            <div class="row">
              <div class="input-field col s12">
                <%= f.email_field :email, class: "validate"%>
                <%= f.label :email %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password, class: "validate"%>
                <%= f.label :password %>
              </div>
            </div>
            <div class="row">
              <div class="col s12">
                <div class="center">
                  <%= f.submit "Login", class: "btn yellow darken-1 waves-effect waves-light", name: "action" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
