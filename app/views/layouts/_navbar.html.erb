<!-- Dropdown Structure -->
<ul id="dropdown1" class="dropdown-content">
  <li><%= link_to "Create Course", courses_new_path %></li>
  <li class="divider"></li>
  <li><%= link_to "Logout", logout_path, method: :delete %></li>
  <li class="divider"></li>
  <li><a href="https://www.github.com/deepakMaj/University_App">Help</a></li>
  <li class="divider"></li>
  <li><%= link_to "About", about_path %></li>
</ul>
<ul id="dropdown2" class="dropdown-content">
  <% if logged_in? %>
    <li><%= link_to "Profile", student_path(current_student) %></li>
    <li class="divider"></li>
    <li><%= link_to "Edit Profile", edit_student_path(current_student) %></li>
    <li class="divider"></li>
  <% end %>
  <li><%= link_to "Logout", logoutstudent_path, method: :delete %></li>
  <li class="divider"></li>
  <li><a href="https://www.github.com/deepakMaj/University_App">Help</a></li>
</ul>
<ul id="dropdown3" class="dropdown-content">
  <li><%= link_to "Login", loginstudent_path %></li>
  <li class="divider"></li>
  <li><%= link_to "Login(Admin)", login_path %></li>
  <li class="divider"></li>
  <li><%= link_to "Sign Up", new_student_path %></li>
  <li class="divider"></li>
  <li><%= link_to "About", about_path %></li>
</ul>
<nav class="navbar">
  <div class="container">
    <div class="nav-wrapper">
      <% if logged_admin? && !logged_in? %>
      <div class="center">
        <%= image_tag("photo.png", class: "circle right responsive-img style")%>
        <h5 class="right">Welcome Admin <%= user_admin.name %></h5>
      </div>
      <% else %>
        <a href="#" class="brand-logo right">Tech University</a>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <% end %>
      <ul id="nav-mobile" class="left hide-on-med-and-down">
        <li><%= link_to "Courses", root_path%></li>
        <li><%= link_to "Students", students_path %></li>
        <!-- Dropdown Trigger -->
        <% if logged_admin? && !logged_in? %>
          <li><a class="dropdown-trigger" href="#!" data-target="dropdown1">Actions<i class="material-icons right">arrow_drop_down</i></a></li>
        <% elsif logged_in? && !logged_admin? %>
          <li><a class="dropdown-trigger" href="#!" data-target="dropdown2">Actions<i class="material-icons right">arrow_drop_down</i></a></li>
        <% else %>
          <li><a class="dropdown-trigger" href="#!" data-target="dropdown3">Accounts<i class="material-icons right">arrow_drop_down</i></a></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <% flash.each do |key, msg|%>
    <div class="row">
      <div class="col s12 m12 l12">
        <div class="card-panel red lighten-2" id="close">
          <span class="white-text">
            <%= msg %>
          </span>
        </div>
      </div>
    </div>
  <% end %>
</div>
